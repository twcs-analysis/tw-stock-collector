# ====================================
# 台股資料收集系統 - 環境變數配置
# ====================================

# ----------------
# 資料庫配置
# ----------------
DB_HOST=postgres
DB_PORT=5432
DB_NAME=tw_stock
DB_USER=stock_user
DB_PASSWORD=changeme_use_strong_password

# ----------------
# FinMind API (選用)
# ----------------
# 免費版不需要 token,但有 API 限制
# 如果有付費版,請填入 token
FINMIND_API_TOKEN=

# ----------------
# 應用程式配置
# ----------------
# 日誌級別: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 時區設定
TZ=Asia/Taipei

# ----------------
# Phase 1: 資料收集配置
# ----------------
# 收集開始日期 (格式: YYYY-MM-DD)
COLLECTION_START_DATE=2020-01-01

# 請求逾時 (秒)
REQUEST_TIMEOUT=30

# 重試次數
RETRY_TIMES=3

# 重試延遲 (秒)
RETRY_DELAY=5

# 請求間隔 (秒,避免超過 API 限制)
REQUEST_INTERVAL=3

# ----------------
# Phase 2: 資料匯入配置
# ----------------
# 批次匯入大小
IMPORT_BATCH_SIZE=1000

# 匯入模式: append (附加) 或 replace (取代)
IMPORT_MODE=append

# ----------------
# Phase 3: 分析與儀表板配置
# ----------------
# Streamlit 端口
STREAMLIT_PORT=8501

# 儀表板主題: light 或 dark
DASHBOARD_THEME=light

# ----------------
# Docker 配置
# ----------------
# PostgreSQL 資料卷名稱
POSTGRES_VOLUME=tw_stock_postgres_data

# 網路名稱
NETWORK_NAME=tw-stock-network
